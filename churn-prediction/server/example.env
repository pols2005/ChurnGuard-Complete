# API Keys
GROQ_API_KEY=<insert key here>

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/churnguard_db
DB_HOST=localhost
DB_PORT=5432
DB_NAME=churnguard_db
DB_USER=username
DB_PASSWORD=password

# JWT Authentication
JWT_SECRET_KEY=your_super_secret_jwt_key_change_this_in_production
JWT_ACCESS_TOKEN_EXPIRES=900  # 15 minutes
JWT_REFRESH_TOKEN_EXPIRES=2592000  # 30 days
JWT_ALGORITHM=HS256

# Session Configuration
SESSION_SECRET_KEY=your_session_secret_key_change_this_in_production
SESSION_TIMEOUT=3600  # 1 hour

# OAuth2 Providers
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
MICROSOFT_CLIENT_ID=your_microsoft_client_id
MICROSOFT_CLIENT_SECRET=your_microsoft_client_secret
OKTA_CLIENT_ID=your_okta_client_id
OKTA_CLIENT_SECRET=your_okta_client_secret
OKTA_DOMAIN=your_okta_domain.okta.com

# SAML Configuration
SAML_SP_ENTITY_ID=https://your-domain.com/saml/metadata
SAML_SP_ACS_URL=https://your-domain.com/saml/acs
SAML_SP_SLS_URL=https://your-domain.com/saml/sls
SAML_SP_X509_CERT=path/to/sp-cert.pem
SAML_SP_PRIVATE_KEY=path/to/sp-key.pem
SAML_IDP_ENTITY_ID=https://your-idp.com/metadata
SAML_IDP_SSO_URL=https://your-idp.com/sso
SAML_IDP_SLS_URL=https://your-idp.com/sls
SAML_IDP_X509_CERT=path/to/idp-cert.pem

# Redis Configuration (for rate limiting and caching)
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Security Settings
BCRYPT_ROUNDS=12
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SYMBOLS=true
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=300  # 5 minutes

# Rate Limiting
RATE_LIMIT_DEFAULT=100  # requests per minute
RATE_LIMIT_AUTH=10  # auth requests per minute
RATE_LIMIT_PASSWORD_RESET=3  # password reset requests per hour

# Email Configuration (for password resets, notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USE_TLS=true
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_email_password
FROM_EMAIL=noreply@your-domain.com

# Application Settings
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost:3000
API_URL=http://localhost:5000
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Multi-tenant Configuration
ENABLE_MULTI_TENANT=true
DEFAULT_ORGANIZATION=churnguard-default
ORGANIZATION_SUBDOMAIN_ENABLED=false

# Audit Logging
AUDIT_LOG_ENABLED=true
AUDIT_LOG_RETENTION_DAYS=90
AUDIT_LOG_SENSITIVE_DATA=false

# File Upload Configuration
MAX_FILE_SIZE=10485760  # 10MB
ALLOWED_FILE_EXTENSIONS=csv,xlsx,json
UPLOAD_PATH=uploads/

# Monitoring and Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
SENTRY_DSN=your_sentry_dsn_here
ENABLE_METRICS=true
METRICS_PORT=9090